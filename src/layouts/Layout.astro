---
import "../styles/global.css";
import Footer from '../components/Footer.astro';
// export interface Props {
// 	title: string;
// }

const { title } = Astro.props.frontmatter || Astro.props;
---

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/jpeg" href="/giticon.jpeg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
</head>
<body>
	<h1>{title}</h1>
	<a class="link" href="/">Know about Manish</a>
	<a class="link" href="/experience">Professional experience</a>
	<a class="link" href="/learnings">Learnings</a>
	<hr class="rounded" />
	<slot />
	<hr class="rounded" />
	<Footer />
</body>


<style>
  hr.rounded {
    border-top: 2px solid #bbb;
    border-radius: 2px;
  }
</style>
