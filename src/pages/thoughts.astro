---
import "../styles/global.css";
import MySiteLayout from '../layouts/Layout.astro';
export interface Props {
	title: string;
}

const allPosts = await Astro.glob('../pages/thoughts/*.md');
console.log(JSON.stringify(allPosts[0]))
---
<MySiteLayout title="Thoughts">
  <ul>
    {allPosts.map(thought => 
      (<li><a href={thought.url}> {new Date(thought.frontmatter.pubDate).toLocaleDateString()} - {thought.frontmatter.title} </a></li>)
      )}
  </ul>
</MySiteLayout>

<style>

a:link {
  background-color: beige;
  text-decoration: none;
}

a:visited {
  background-color:  beige;
}

a:hover {
  background-color:  beige;
}


</style>