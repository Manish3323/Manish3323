  },
  {
    title: "Wise and otherwise",
    url: "https://www.goodreads.com/book/show/1184484.Wise_and_Otherwise?ac=1&from_search=true&qid=y5NZrN5vWg&rank=1",
  },
  {
    title: "Tuesday's with morrie",
    url: "https://www.goodreads.com/book/show/6900.Tuesdays_with_Morrie?ac=1&from_search=true&qid=QUVH2KgmNq&rank=1",
  },
];
const languagesFrameworks = [
  "Typescript ‚úß",
  "Python",
  "Scala ‚úß",
  "Javascript",
  "Node",
  "Java ‚úß",
  "React ‚úß",
  "Astro",
  "Akka",
  "Backstage ‚úß",
  "CSS",
  "Vite ‚úß",
  "Lit",
];
const technicalSkills = [
  "System Design",
  "Object Oriented Programming",
  "Data structures ‚úß",
  "TDD",
  "Web development",
  "Story estimation & Sprint Planing",
  "Expertise in debugging the problems",
  "Technical Documentation üñäÔ∏è üìë",
  "Using Google Search Efficiently üîç",
];

const skillColor = "green";
