  new Date(Date.now())
);
const identity = {
  firstName: "Manish",
  country: "Mumbai, India",
  occupation: "Software Developer",
  hobbies: ["trekking", "playing cricket", "photography"],
  approxYearOfExp: yearsOfExp,
};
const favBooks = [
  {
    title: "Pragmatic Programmer",
    url: "https://www.goodreads.com/en/book/show/4099.The_Pragmatic_Programmer",
  },
  {
    title: "Clean Code",
    url: "https://www.goodreads.com/book/show/3735293-clean-code?from_search=true&from_srp=true&qid=GqYPp2NNpY&rank=1",
  },
  {
    title: "Zen and the Art of motorcycle maintenence",
    url: "https://www.goodreads.com/book/show/629.Zen_and_the_Art_of_Motorcycle_Maintenance?ac=1&from_search=true&qid=TRHl5y2Y5F&rank=1",
  },
  {
